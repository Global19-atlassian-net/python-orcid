{% extends "base.xml" %}

{% block content %}
<orcid-bio>
  <external-identifiers>
    {% for record in records %}
        {% if record.orcid %}
            <external-id-orcid>{{ record.orcid }}</external-id-orcid>
        {% endif %}
        {% if record.common_name %}
            <external-id-common-name>{{ record.common_name }}</external-id-common-name>
        {% endif %}
        {% if record.reference %}
            <external-id-reference>{{ record.reference }}</external-id-reference>
        {% endif %}
        {% if record.url %}
            <external-id-url>{{ record.url }}</external-id-url>
        {% endif %}
    {% endfor %}
  </external-identifiers>
</orcid-bio>
{% endblock %}
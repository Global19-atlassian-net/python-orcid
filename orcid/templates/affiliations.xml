
{% extends "base.xml" %}

{% block content %}
<affiliations>
  {% for record in records %}
  <affiliation {% if record.visibility %}visibility="{{ record.visibility }}"{% endif %}{% if record.put_code %} put-code="{{ record.put_code }}"{% endif %}>
    <type>
      {{ record.type }}
    </type>
    <name>
      {{ record.name }}
    </name>
    {% if record.department %}
      <department-name>
        {{ record.department }}
      </department-name>
    {% endif %}
    {% if record.role %}
      <role-title>
        {{ record.role }}
      </role-title>
    {% endif %}
    {% if record.start_date %}
      {{ date_xml("start-date", record.start_date) }}
    {% endif %}
    {% if record.end_date %}
      {{ date_xml("end-date", record.end_date) }}
    {% endif %}
    {% if record.organization %}
      {{ organization(record) }}
    {% endif %}
  </affiliation>
  {% endfor %}
</affiliations>
{% endblock %}